<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container">
        <hr>
        <h1 class="mt-3"><%= pergunta.titulo %></h1>
        <p class=""><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <hr>
            <label class="mt-2">Resposta</label>
            <textarea placeholder="Digite sua resposta" class="form-control p-3 mb-3" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary mt-2">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(r => { %>
            <div class="card mt-1 p-1 mb-1">
                <div class="card-body">
                    <p class="h5"><%= r.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include('./partials/footer.ejs') %>
</html>